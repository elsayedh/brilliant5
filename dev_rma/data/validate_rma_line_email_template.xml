<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="validate_rma_line_email_template" model="mail.template">
            <field name="name">Return Sales Order Request</field>
            <field name="model_id" ref="dev_rma.model_dev_rma_rma"/>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">${object.sale_id.name} Return Approval Request</field>
            <field name="lang">${ctx['lang']}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
                Hello,

                <p>New Return Return order <b>'${object.name}'</b> Created   by ${object.user_id.name} need your approval on it.</p>

                <p> To Approve, Cancel Order, click on the following link:</p>
                <div style="margin-top: 16px;">
                     <a href="${ctx['action_url']}" style="padding: 5px 10px; font-size: 12px; line-height: 18px; color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B; border: 1px solid #875A7B; border-radius:3px">Approve Return Order</a>
                </div>
                <br/>
                <p>Thank You.</p>
                ]]>
            </field>
        </record>





    </data>
</odoo>
