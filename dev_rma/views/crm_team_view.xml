<odoo>
    
    <record id="action_dev_team_rma_rma" model="ir.actions.act_window">
        <field name="name">RMA</field>
        <field name="res_model">dev.rma.rma</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_team_id': active_id}</field>
        <field name="domain">[('team_id', '=', active_id)]</field>
    </record>
    
    <record id="action_dev_team_draft_rma_rma" model="ir.actions.act_window">
        <field name="name">RMA</field>
        <field name="res_model">dev.rma.rma</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_team_id': active_id}</field>
        <field name="domain">[('team_id', '=', active_id),('state','=','draft')]</field>
    </record>
    
    <record id="action_dev_team_confirm_rma_rma" model="ir.actions.act_window">
        <field name="name">RMA</field>
        <field name="res_model">dev.rma.rma</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_team_id': active_id}</field>
        <field name="domain">[('team_id', '=', active_id),('state','=','confirm')]</field>
    </record>
    
    <record id="action_dev_team_process_rma_rma" model="ir.actions.act_window">
        <field name="name">RMA</field>
        <field name="res_model">dev.rma.rma</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_team_id': active_id}</field>
        <field name="domain">[('team_id', '=', active_id),('state','=','process')]</field>
    </record>
    
    <record id="action_dev_team_close_rma_rma" model="ir.actions.act_window">
        <field name="name">RMA</field>
        <field name="res_model">dev.rma.rma</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_team_id': active_id}</field>
        <field name="domain">[('team_id', '=', active_id),('state','=','close')]</field>
    </record>
    
    <record id="action_dev_team_reject_rma_rma" model="ir.actions.act_window">
        <field name="name">RMA</field>
        <field name="res_model">dev.rma.rma</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_team_id': active_id}</field>
        <field name="domain">[('team_id', '=', active_id),('state','=','reject')]</field>
    </record>
    
    
    
     <record id="dev_crm_team_kanban" model="ir.ui.view">
            <field name="name">dev.crm.team.kanban</field>
            <field name="model">crm.team</field>
            <field name="arch" type="xml">
                
                <kanban class="oe_background_grey o_kanban_dashboard o_maintenance_team_kanban" create="0">
                    <field name="name"/>
                    <field name="color"/>
                    <field name="rma_ids"/>
                    <field name="rma_draft_count"/>
                    <field name="rma_confirm_count"/>
                    <field name="rma_process_count"/>
                    <field name="rma_close_count"/>
                    <field name="rma_reject_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)}" name="stock_picking">
                                <div>
                                    <div t-attf-class="o_kanban_card_header">
                                        <div class="o_kanban_card_header_title">
                                            <div class="o_primary">
                                                <a type="object" name="action_get_hr_loan_type">
                                                        <h3><field name="name"/></h3>
                                                    </a>
                                            </div>
                                            <div class="o_secondary"></div>
                                        </div>
                                        <div class="o_kanban_manage_button_section">
                                            <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" /></a>
                                        </div>
                                    </div>
                                    <div class="container o_kanban_card_content">
                                            <div class="row">
                                                    <div class="col-6 o_kanban_primary_left">
                                                       <button class="btn btn-primary" name="%(action_dev_team_rma_rma)d" type="action">
                                                                <span >To Do</span>
                                                        </button>
                                                    
                                                    </div>
                                                    <div class="col-6 o_kanban_primary_right">
                                                            <div class="row">
                                                                <div class="col-9">
                                                                    <a  name="%(action_dev_team_draft_rma_rma)d" type="action">
                                                                        Draft
                                                                    </a>
                                                                </div>
                                                                <div class="col-3">
                                                                    <t t-esc="record.rma_draft_count.value"/>
                                                                </div>
                                                            </div>
                                                            
                                                            <div class="row">
                                                                <div class="col-9">
                                                                   <a name="%(action_dev_team_confirm_rma_rma)d"  type="action" >
                                                                        Confirm
                                                                    </a>
                                                                </div>
                                                                <div class="col-3">
                                                                    <t t-esc="record.rma_confirm_count.value"/>
                                                                </div>
                                                            </div>
                                                            
                                                            <div class="row">
                                                                <div class="col-9">
                                                                   <a name="%(action_dev_team_process_rma_rma)d"  type="action" >
                                                                        Process
                                                                    </a>
                                                                </div>
                                                                <div class="col-3">
                                                                    <t t-esc="record.rma_process_count.value"/>
                                                                </div>
                                                            </div>
                                                            
                                                            <div class="row">
                                                                <div class="col-9">
                                                                   <a name="%(action_dev_team_close_rma_rma)d" type="action">
                                                                        Closed
                                                                    </a>
                                                                </div>
                                                                <div class="col-3">
                                                                    <t t-esc="record.rma_close_count.value"/>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-9">
                                                                   <a name="%(action_dev_team_reject_rma_rma)d" type="action">
                                                                        Reject
                                                                    </a>
                                                                </div>
                                                                <div class="col-3">
                                                                    <t t-esc="record.rma_reject_count.value"/>
                                                                </div>
                                                            </div>
                                                    </div>
                                                    
                                            </div>
                                    </div>
                                    
                                    <div class="container o_kanban_card_manage_pane dropdown-menu" role="menu">
                                        <div class="row">
                                                <div class="col-6 o_kanban_card_manage_section o_kanban_manage_view">
                                                        <div role="menuitem" class="o_kanban_card_manage_title">
                                                            <span>Reporting</span>
                                                        </div>
                                                        <div role="menuitem">
                                                            <a name="%(action_rma_report_all)d" type="action" context="{'search_default_team_id': active_id}">
                                                RMA Analysis
                                            </a>
                                                        </div>
                                                        <div t-if="widget.editable" class="o_kanban_card_manage_settings row">
                                                            <div class="col-8" role="menuitem" aria-haspopup="true">
                                                                <ul class="oe_kanban_colorpicker" data-field="color" role="menu"/>
                                                            </div>
                                                            <div role="menuitem" class="col-4 text-center">
                                                                <a type="edit">Settings</a>
                                                            </div>
                                                        </div>
                                                </div>
                                        </div>
                                    </div>
                                    
            </div>
        </div>
                
    </t>

                    </templates>
                </kanban>
            </field>
        </record>
 
    
    <record id="action_dev_crm_team_kanban" model="ir.actions.act_window">
        <field name="name">RMA Teams</field>
        <field name="res_model">crm.team</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="dev_crm_team_kanban"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a stage in the maintenance request.
          </p>
        </field>
    </record>
    
    <menuitem
        id="menu_m_dashboard"
        name="Dashboard"
        parent="menu_dev_rma_rma_main"
        action="action_dev_crm_team_kanban"
        sequence="0"/>
    
    
</odoo>
