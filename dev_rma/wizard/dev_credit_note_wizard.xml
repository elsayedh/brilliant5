<odoo>
    
    <record id="view_dev_credit_note_wizard_form" model="ir.ui.view">
	    <field name="name">view.dev.credit.note.wizard.form</field>
	    <field name="model">dev.credit.note.wizard</field>
	    <field name="arch" type="xml">
	     <form string="Credit Notes">
	        <group>
	            <group>
	                <field name="sale_id" readonly="1"/>
	            </group>
	            <group>
	                <field name="rma_id" readonly="1"/>
	            </group>
	        </group>
	        <field name="product_line_ids">
	            <tree editable="bottom">
	                <field name="sale_line_id" invisible="1"/>
	                <field name="product_id"/>
	                <field name="quantity"/>
	                <field name="price"/>
	            </tree>
	        </field>
	        <footer>
                    <button string="Create Credit Notes" name="action_credit_notes" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
	     </form>
	   </field>
	</record>
	
	
    
    
    <record id="action_dev_credit_notes" model="ir.actions.act_window">
	    <field name="name">Credit Notes</field>
	    <field name="type">ir.actions.act_window</field>
	    <field name="res_model">dev.credit.note.wizard</field>
	    <field name="binding_view_types">form</field>
	    <field name="view_id" ref="view_dev_credit_note_wizard_form"/>
	    <field name="view_mode">form</field>
	    <field name="target">new</field>
	</record>

</odoo>
