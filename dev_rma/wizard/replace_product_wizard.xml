<odoo>
    
    <record id="view_replace_product_wizard_form" model="ir.ui.view">
	    <field name="name">view.replace.product.wizard.form</field>
	    <field name="model">replace.product.wizard</field>
	    <field name="arch" type="xml">
	     <form string="Replace Product">
	        <group>
	            <group>
	                <field name="product_id" invisible="1"/>
	                <field name="replace_product_id" required="1"/>
	            </group>
	            <group>
	                <field name="is_same_product" invisible="1"/>
	                <field name="replace_qty" attrs="{'invisible':[('is_same_product','=',False)]}" required="1"/>
	            </group>
	        </group>
	        <footer>
                    <button string="Replace" name="action_replace" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
	     </form>
	   </field>
	</record>
	
	
    
    
    <record id="action_replace_product" model="ir.actions.act_window">
	    <field name="name">Replace Product</field>
	    <field name="type">ir.actions.act_window</field>
	    <field name="res_model">replace.product.wizard</field>
	    <field name="binding_view_types">form</field>
	    <field name="view_id" ref="view_replace_product_wizard_form"/>
	    <field name="view_mode">form</field>
	    <field name="target">new</field>
	</record>

</odoo>
