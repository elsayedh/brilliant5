<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_users_form_view_inherit_ip" model="ir.ui.view">
            <field name="name">res.users.form.view.inherit.ip</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="groups_id" eval="[(4,ref('discount_approval_workflow.discount_approval_manager')),(4,ref('discount_approval_workflow.discount_approval_director'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="discount_control" string="Discount Control">
                        <group>
                            <group>
                                <label for="allow_discount"/>
                                <div>
                                    <field name="allow_discount" class="oe_inline" />
                                    <span class="o_form_label oe_inline">  %</span>
                                </div>

                            </group>


                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>