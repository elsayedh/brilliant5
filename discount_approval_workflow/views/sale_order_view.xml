<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="sale_order_form_view_inherit_ip" model="ir.ui.view">
            <field name="name">sale.order.form.view.inherit.ip</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_confirm']" position="replace">
                	<button name="action_confirm_check_discount" string="Confirm" type="object" attrs="{'invisible': [('state', 'not in', ['draft','sent'])]}"/>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="states">draft,sent,waiting,waiting2,sale</attribute>
                </xpath>
                <xpath expr="//header" position="inside">
                	<button name="action_discount_approval" type="object" states="waiting" string="Approve" class="oe_highlight" groups="discount_approval_workflow.discount_approval_manager"/>
                	<button name="action_discount_approval_director" type="object" states="waiting2" string="Approve Drirector" class="oe_highlight" groups="discount_approval_workflow.discount_approval_director"/>
                </xpath>
                <xpath expr="//group[@name='sales_person']" position="inside">
                    <field name="discount_approve_by" attrs="{'invisible': [('discount_approve_by', '=', False)]}"/>
                    <field name="discount_approve_director_by" attrs="{'invisible': [('discount_approve_director_by', '=', False)]}"/>

                </xpath>



            </field>
        </record>
        <record id="view_quotation_tree" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit.sale.stock</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="decoration-warning">state == 'waiting'</attribute>
                    <attribute name="decoration-warning">state == 'waiting2'</attribute>
                </xpath>
            </field>
        </record>


   <record id="sale_order_form_view_inherit_ip_restrict" model="ir.ui.view">
            <field name="name">sale.order.form.view.inherit.ip.restrict</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
              <xpath expr="//page/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">

                   <attribute name="readonly">1</attribute>
              </xpath>
                   <xpath expr="//field[@name='pricelist_id']" position="attributes">

                   <attribute name="readonly">1</attribute>
              </xpath>
                 <xpath expr="//page/field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                          <field name="is_need_approve" invisible="1"/>
                          <field name="is_duplicate" invisible="1"/>
                 </xpath>

                <xpath expr="//page/field[@name='order_line']/tree/field[@name='discount']" position="attributes">
                  <attribute name="decoration-danger">is_need_approve</attribute>
                 </xpath>
                <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                  <attribute name="decoration-danger">is_duplicate</attribute>
                 </xpath>

            </field>
   </record>

    </data>
</odoo>

