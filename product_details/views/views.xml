<odoo>
  <data>


       <record id="product_template_form_view2" model="ir.ui.view">
            <field name="name">product.template.form.inherit2</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath  expr="//field[@name='barcode']" position="after">
             <field name="color_id" />
             <field name="brand_id" />

                 </xpath>

            </field>

        </record>



         <record id="view_product_color_form" model="ir.ui.view">
        <field name="name">view.product.color.form</field>
        <field name="model">product.color</field>
        <field name="arch" type="xml">
            <form string="Color">
                 <sheet>
                     <group>
                         <field name="name"/>
                     </group>
                 </sheet>


            </form>
        </field>
          </record>


          <record id="view_product_brand_form" model="ir.ui.view">
        <field name="name">view.product.brand.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form string="Brand">
                 <sheet>
                     <group>
                         <field name="name"/>
                     </group>
                 </sheet>


            </form>
        </field>
          </record>
    <!-- explicit list view definition -->



    <record model="ir.ui.view" id="product_details_color_list">
      <field name="name">ProductDetails list</field>
      <field name="model">product.color</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>

        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="product_details_brand_list">
      <field name="name">ProductDetails list</field>
      <field name="model">product.brand</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>

        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="product_details_color_action_window">
      <field name="name">Color</field>
      <field name="res_model">product.color</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="product_details_brand_action_window">
      <field name="name">Brand</field>
      <field name="res_model">product.brand</field>
      <field name="view_mode">tree,form</field>
    </record>

