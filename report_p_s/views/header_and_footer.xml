<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="external_layout_standard_header_and_footer" inherit_id="web.external_layout_standard">

    <xpath expr="//div[1]" position="replace">
      <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
        <div class="row">
          <!--header-->
          <div class="col-md-10">
            <img t-if="company.logo" src="report_p_s/static/description/img/hed01.png"
                 style="top:10px;width:100%;height:150px;" alt="Logo"/>
          </div>
          <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
        </div>

      </div>
    </xpath>

    <xpath expr="//div/div[hasclass('text-center')]" position="replace">
      <div class="text-center" style="top:10px;width:100%;height:80px;">
        <!-- footer -->
        <div name="financial_infos">
          <img src="report_p_s/static/description/img/fo1.png" style="top:10px;width:100%;height:100px;"/>
        </div>
      </div>
    </xpath>

  </template>

</odoo>
